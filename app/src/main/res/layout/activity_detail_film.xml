<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBA1B7"
    tools:context=".Admin.detailFilmActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="20dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detail Film"
                android:fontFamily="@font/poppins_bold"
                android:textSize="32dp"
                android:textAlignment="center"
                android:layout_marginTop="20dp"/>


            <TextView
                android:id="@+id/txt_tittle_detailMovieAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Judul Film"
                android:fontFamily="@font/poppins_bold"
                android:textSize="16dp"
                android:layout_marginTop="40dp"/>

            <TextView
                android:id="@+id/txt_director_detailMovieAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Sutradara"
                android:fontFamily="@font/poppins_bold"
                android:textSize="16dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/txt_genre_detailMovieAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="genre"
                android:fontFamily="@font/poppins_bold"
                android:textSize="16dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/txt_duration_detailMovieAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="durasi film"
                android:fontFamily="@font/poppins_bold"
                android:textSize="16dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/txt_price_detailMovieAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="harga"
                android:fontFamily="@font/poppins_bold"
                android:textSize="16dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/txt_description_detailMovieAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="deskripsi"
                android:fontFamily="@font/poppins_bold"
                android:textSize="16dp"
                android:layout_marginTop="20dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:id="@+id/btn_kembali"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_text"
                android:backgroundTint="#4d94bd"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-medium"
                android:padding="10dp"
                android:text="Kembali"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>