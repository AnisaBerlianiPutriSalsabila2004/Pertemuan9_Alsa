<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.InputActivity"
    android:background="@color/white"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Input Data"
        android:fontFamily="@font/poppins_bold"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginBottom="10dp"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_tittle_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_text"
        android:height="45dp"
        android:paddingLeft="15dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_semibold"
        android:hint="Movie title"/>

    <EditText
        android:id="@+id/et_director_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_text"
        android:height="45dp"
        android:paddingLeft="15dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_semibold"
        android:hint="Directed by"/>

    <EditText
        android:id="@+id/et_duration_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_text"
        android:height="45dp"
        android:paddingLeft="15dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_semibold"
        android:hint="Movie duration"/>

    <EditText
        android:id="@+id/et_genre_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_text"
        android:height="45dp"
        android:paddingLeft="15dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_semibold"
        android:hint="Genre"/>

    <EditText
        android:id="@+id/et_price_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_text"
        android:height="45dp"
        android:paddingLeft="15dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_semibold"
        android:hint="Price"/>

    <EditText
        android:id="@+id/et_description_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_text"
        android:height="45dp"
        android:paddingLeft="15dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_semibold"
        android:hint="Description"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="20dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@drawable/border_text"
            android:backgroundTint="@color/main_purple"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_bold"
            android:text="Tambahkan"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_text"
            android:backgroundTint="@color/main_purple"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_bold"
            android:padding="10dp"
            android:text="Ubah"/>

    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>